<?xml version="1.0" encoding="utf-8"?>
<!--Movie details layout contains title, release date, movie poster, vote average, and plot synopsis.-->
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="movie"
            type="com.aaqanddev.aaqsawesomeandroidapp.pojo.AaqMovie"/>
    </data>
    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ScrollView android:layout_height="match_parent" android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <android.support.constraint.ConstraintLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".DetailActivity">

                <TextView
                    android:id="@+id/movie_detail_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{movie.title}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/movie_detail_summary"
                    />
                <TextView
                    android:id="@+id/movie_detail_release_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{movie.releaseDate}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/movie_detail_vote_average"
                    app:layout_constraintTop_toBottomOf="@+id/movie_detail_title"
                    app:layout_constraintBottom_toTopOf="@+id/movie_detail_summary"/>
                <TextView
                    android:id="@+id/movie_detail_vote_average"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(safeUnbox(movie.voteAverage))}"
                    app:layout_constraintStart_toEndOf="@+id/movie_detail_release_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/movie_detail_title"
                    app:layout_constraintBottom_toTopOf="@+id/movie_detail_summary"/>
                <TextView
                    android:id="@+id/movie_detail_summary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{movie.overview}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/movie_detail_vote_average"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!--could i develop to either provide this IV from cache
                    or run the Picasso code here?-->
                <ImageView
                    android:id="@+id/movie_detail_poster_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/movie_detail_title"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </FrameLayout>
</layout>